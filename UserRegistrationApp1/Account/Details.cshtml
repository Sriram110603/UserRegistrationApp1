@model UserRegistrationApp1.Models.User

@{
    ViewData["Title"] = "User Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" /
<div class="container mt-5">
    <h2 class="text-center mb-4">Registered User Details</h2>

    <div class="card p-4 shadow">
        <dl class="row">
            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Password</dt>
            <dd class="col-sm-8">@Model.Password</dd>

            <dt class="col-sm-4">Gender</dt>
            <dd class="col-sm-8">@Model.Gender</dd>

            <dt class="col-sm-4">Phone Number</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4">Address</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            @if (Model.Age > 0)  // Optional: show Age if it's still calculated
            {
                <dt class="col-sm-4">Age</dt>
                <dd class="col-sm-8">@Model.Age</dd>
            }
        </dl>

        <div class="text-end">
            <a href="@Url.Action("List", "Account")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
