<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserRegistrationApp</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        #wrapper {
            display: flex;
            width: 100%;
        }


        #sidebar-wrapper {
            width: 250px;
            background-color: #2c2f48;
            color: white;
            transition: all 0.3s ease;
            min-height: 100vh;
        }

            #sidebar-wrapper.collapsed {
                width: 0 !important;
                overflow: hidden;
                padding: 0 !important;
            }

        #page-content-wrapper {
            flex-grow: 1;
            transition: all 0.3s ease;
        }



        .sidebar-heading {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-heading img {
                border-radius: 50%;
                width: 70px;
                height: 70px;
            }

            .sidebar-heading h5 {
                margin-top: 10px;
                margin-bottom: 2px;
                color: white !important;
            }

        .nav-link {
            color: white !important;
            padding: 12px 20px;
        }

            .nav-link i {
                margin-right: 10px;
            }

            .nav-link:hover {
                background-color: #383c5a;
            }

        .toast-body {
            font-weight: bold;
        }

        .nav-heading {
            color: white !important;
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            padding: 10px 20px 5px;
            opacity: 1;
        }

    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <img src="https://i.ibb.co/j3q5hC5/user.png" alt="User" />
                <h5>User</h5>
            </div>

            <!-- Parent 1: Site Info -->
            <h6 class="nav-heading">Site Info</h6>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/About">
                        <i class="fas fa-info-circle me-2"></i>About Us
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Privacy">
                        <i class="fas fa-user-shield me-2"></i>Privacy Policy
                    </a>
                </li>
            </ul>

            <!-- Parent 2: User Interaction -->
            <h6 class="nav-heading">User Interaction</h6>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Suggestions">
                        <i class="fas fa-comment-dots me-2"></i>Suggestions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Reviews">
                        <i class="fas fa-star me-2"></i>User Reviews
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Contact">
                        <i class="fas fa-envelope me-2"></i>Contact Us
                    </a>
                </li>
            </ul>
        </div> <!-- ✅ FIXED: Closed Sidebar wrapper -->
        <!-- Page content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
                <button class="btn btn-outline-light" id="sidebarToggle">☰</button>
                <a class="navbar-brand ms-3" asp-area="" asp-controller="Home" asp-action="Index">UserRegistrationApp</a>
                <div class="ms-auto me-3">
                    <a class="btn btn-outline-danger" href="/Account/Logout">Logout</a>
                </div>
            </nav>

            <div class="container-fluid mt-4">
                @RenderBody()

                @* Toast Message *@
                @{
                    string toastMessage = TempData["SuccessMessage"] as string ?? TempData["Toasts"] as string ?? TempData["LogoutMessage"] as string;
                    string toastType = TempData["SuccessMessage"] != null || TempData["LogoutMessage"] != null ? "bg-success" : "bg-danger";
                }

                @if (!string.IsNullOrEmpty(toastMessage))
                {
                    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100">
                        <div id="toastMessage" class="toast align-items-center text-white @toastType border-0" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">
                                    @toastMessage
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <footer class="border-top footer text-muted mt-4">
                <div class="container">
                    &copy; 2025 - UserRegistrationApp
                </div>
            </footer>
        </div> <!-- End of page content -->
    </div> <!-- End of wrapper -->
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toastEl = document.getElementById('toastMessage');
            if (toastEl) {
                const toast = new bootstrap.Toast(toastEl);
                toast.show();
            }

            document.getElementById("sidebarToggle").addEventListener("click", function () {
                document.getElementById("sidebar-wrapper").classList.toggle("collapsed");
            });
        });
    </script>
</body>
</html>

